@{
    ViewBag.Title = Resources.HomePage;
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}

@helper selected(string c, string culture)
{
    if (c == culture)
    {
        @:checked="checked"
    }
}

@using (Html.BeginForm("SetCulture", "Home"))
{
    <fieldset>
        <div class="control-group">
            <div class="controls">
                <label for="zh-cn">
                    <input name="culture" id="zh-cn" value="zh-cn" type="radio" @selected("zh-cn", culture) /> 中文
                </label>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label for="en-au">
                    <input name="culture" id="en-au" value="en-au" type="radio" @selected("en-au", culture) /> English
                </label>
            </div>
        </div>
    </fieldset>
}

<div class="jumbotron">
    <p class="lead">@Resources.uHomeOverview</p>
    <p>@Html.ActionLink(Resources.LearnMore, "About", "Home")</p>
</div>

<div class="row">
    <div class="col-md-4">
        <div id="event_slider_container" style="position: relative; top: 0px; left: 0px; width: 800px; height: 320px;">
            <!-- Slides Container -->
            <div u="slides" style="position: absolute; overflow: hidden; left: 0px; top: 0px; width: 800px; height: 320px;">
                <div><img u="image" src="~/Content/Images/event1.png" /></div>
                <div><img u="image" src="~/Content/Images/event2.png" /></div>
                <div><img u="image" src="~/Content/Images/event3.png" /></div>
            </div>
        </div>
    </div>
    <div class="col-md-3" style="float: right; right: 56px;">
        <iframe width="320" height="320" src="//www.youtube.com/embed/VMW3shSbeeo" frameborder="0"></iframe>
   </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jssor")
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            var options = { $AutoPlay: true };
            var event_slider = new $JssorSlider$('event_slider_container', options);
        });

        (function ($) {
            $("input[type = 'radio']").click(function () {
                $(this).parents("form").submit(); // post form
            });

        })(jQuery);
    </script>
}