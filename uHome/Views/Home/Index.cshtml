@{
    ViewBag.Title = Resources.HomePage;
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}

@helper selected(string c, string culture)
{
    if (c == culture)
    {
        @:checked="checked"
    }
}

@using (Html.BeginForm("SetCulture", "Home"))
{
    <fieldset>
        <legend>@Resources.ChooseYourLanguage</legend>
        <div class="control-group">
            <div class="controls">
                <label for="zh-cn">
                    <input name="culture" id="zh-cn" value="zh-cn" type="radio" @selected("zh-cn", culture) /> 中文
                </label>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label for="en-au">
                    <input name="culture" id="en-au" value="en-au" type="radio" @selected("en-au", culture) /> English
                </label>
            </div>
        </div>
    </fieldset>
}

<div class="jumbotron">
    <h1>@Resources.uHome</h1>
    <p class="lead">@Resources.uHomeOverview</p>
    <p>@Html.ActionLink(Resources.LearnMore, "About", "Home")</p>
</div>

<div class="row">
    <div class="col-md-4">
        <p>
            Special events with tabbed/rotated images
        </p>
    </div>
    <div class="col-md-4">
        <p>
            Play each video file thumbs
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        (function ($) {
            $("input[type = 'radio']").click(function () {
                $(this).parents("form").submit(); // post form
            });

        })(jQuery);
    </script>
}