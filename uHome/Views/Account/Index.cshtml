@model IEnumerable<uHome.Models.AccountIndexViewModel>

@{
    ViewBag.Title = Resources.UserAdmin;
}

<h2>@ViewBag.Title</h2>

@Html.AntiForgeryToken()

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="Account_@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles)
            </td>
            <td>
                @Ajax.RawActionLink(
                "<span class=\"glyphicon glyphicon-trash\"></span> Disable",
                "Disable",
                "Account",
                new { id = item.Id },
                new AjaxOptions
                {
                    Confirm = string.Format("Are you sure you want ot delete {0}?", item.UserName),
                    OnBegin = "showSpinner",
                    OnComplete = "hideSpinner",
                    OnSuccess = "onAccountDeleteSuccess",
                    OnFailure = "onAccountDeleteFailure",
                    HttpMethod = "POST"
                },
                new { @class = "btn btn-danger" }
            )
            </td>
        </tr>
    }

</table>

@section Scripts {
    <script type="text/javascript">
        function onAccountDeleteSuccess(response) {
            if (response.success) {
                $('#Account_' + response.Id).remove();
            }
            else {
                alert(response.error);
            }
        }

        function onAccountDeleteFailure(response) {
            alert("500: Internel Error, please report to administrator");
        }
    </script>
}